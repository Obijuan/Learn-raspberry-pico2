{
    "version": "2.0.0",
    "tasks": [
        {
          "label": "Run QEMU",
          "type": "shell",
          "command": "echo 'QEMU started'; qemu-riscv32 -g 3333 ${workspaceFolder}/${relativeFileDirname}/main.elf",
          "isBackground": true,
          "problemMatcher": [
            {
              "pattern": [
                {
                  "regexp": ".",
                  "file": 1,
                  "location": 2,
                  "message": 3
								}
							],
              "background": {
                "activeOnStart": true,
                "beginsPattern": ".",
                "endsPattern": "QEMU started",
							}
						}
					]
				}
		]
}